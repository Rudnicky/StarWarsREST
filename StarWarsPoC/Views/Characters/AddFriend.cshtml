@model StarWarsPoC.Core.ViewModels.AddFriendToCharacterViewModel

@{
}

<h2>Add Episode to @Model.Character.Name</h2>

<form asp-controller="Characters" asp-action="AddFriend" method="post">
    <div class="form-group">
        <label asp-for="FriendId"></label>
        <select asp-for="FriendId" asp-items="Model.Friends"></select>
        <span asp-validation-for="FriendId"></span>
    </div>

    <input type="hidden" name="CharacterId" value="@Model.Character.Id" />

    <input type="submit" value="Add Item" />
</form>